    <script src="/dist/js/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="/dist/js/bootstrap.min.js"></script>
    <script src="/dist/js/bootstrap/bootstrap-table.js" type="text/javascript"></script>

    <script src="/james_js/admin.js" type="text/javascript"></script>
  </body>
</html>
