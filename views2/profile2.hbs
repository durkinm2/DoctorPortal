    <script src="/dist/js/jquery/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="/dist/js/bootstrap/bootstrap.js"></script>
    <script src="/dist/js/bootstrap/bootstrap-table.js" type="text/javascript"></script>

    <script src="/james_js/index.js" type="text/javascript"></script>
  </body>
</html>
