    <meta name="author" content="">

    <title>DoctorPortal - Patients</title>

    <!-- Bootstrap core CSS -->
    <link href="/dist/css/bootstrap/bootstrap.css" rel="stylesheet">

    <link href="/dist/css/bootstrap/bootstrap-table.css" rel="stylesheet">

    <!-- FontAwesome Icons -->
    <link href="/dist/css/font-awesome/font-awesome.css" rel="stylesheet" type="text/css">

    <!-- Main stlying (James) -->
    <link href="/css/main.css" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
      <button class="navbar-toggler navbar-toggler-right hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbar-main-top" aria-controls="navbar-main-top" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <a class="navbar-brand" href="#"><i class="fa fa-heartbeat fa-1x mr-1" aria-hidden="true" style="color: rgb(0,152,213);"></i>DoctorPortal</a>

      <div class="collapse navbar-collapse" id="navbar-main-top">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="profile">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link  mr-sm-2" href="#">Settings</a>
          </li>
        </ul>

        <ul class="navbar-nav">
          <li>
            <a class="nav-link" href="#"><i class="fa fa-lock fa-1x mr-2" aria-hidden="true"></i>Administrator</a>
          </li>
        </ul>

      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">

        <main class="col-sm-12 pt-3">

          <h1 style="border-bottom: 1px solid #eee; margin-bottom: 20px; padding-bottom: 9px">Patients for <span>Doctor Name</span></h1>
          <div class="table-responsive" style="margin-bottom: 30px;">
            <table id="table-patient-instances" data-toggle="table" class="dp-table-modal"
             data-pagination="true"
             data-search="true"
             data-url="/tests/doctor_accounts_test1.json"
             data-show-refresh="true"
             data-show-columns="true"
             data-sort-name="first-name"
             data-sort-order="desc"
             data-toolbar="#toolbar">
              <thead>
                <tr>
                    <th data-field="id"
                        data-sortable="true">
                            patient ID
                    </th>
                    <th data-field="first-name"
                        data-sortable="true">
                            First Name
                    </th>
                    <th data-field="last-name"
                        data-sortable="true">
                            Last Name
                    </th>
                </tr>
              </thead>
            </table>
          </div>
        </main>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
