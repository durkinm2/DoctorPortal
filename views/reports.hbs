       <script src="/dist/js/jquery/tableExport.jquery/libs/jsPDF/jspdf.min.js" type="text/javascript"></script>
       <script src="/dist/js/jquery/tableExport.jquery/libs/jsPDF-AutoTable/jspdf.plugin.autotable.js" type="text/javascript"></script>
       <script src="/dist/js/jquery/tableExport.jquery/tableExport.min.js" type="text/javascript"></script>
