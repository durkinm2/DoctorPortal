  <body>
    {{!< layout}}
    <div class="container" id="login-container">
    	<div class="card text-center" style="border-color: #333">

			  <div class="card-header card-inverse mb-3" style="background-color: #333; border-color: #333; color: white;">
			    <div>
				    <i class="fa fa-heartbeat fa-2x" aria-hidden="true" style="color: rgb(0,152,213);"></i>
				    <span style="font-size: 30px;">DoctorPortal</span>
			    </div>
			  </div>

			  <div class="card-block">
          <form method="post" action="login">

			    <div class="input-group mb-2">
					  <span class="input-group-addon"><i class="fa fa-user-md fa-fw"></i></span>
					  <input class="form-control" type="text" name="username" placeholder="Username">
					</div>
					<div class="input-group mb-4">
					  <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
					  <input class="form-control" type="password" name="password" placeholder="Password">
					</div>
          <input type="submit" class="btn btn-primary mb-1" value="Log in">
        </form>
			  </div>

